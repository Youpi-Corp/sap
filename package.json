{
  "name": "brainforest-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run build:clean && bun run build:compile && bun run build:migrate",
    "build:clean": "rm -rf dist",
    "build:compile": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:migrate": "bun build ./src/db/migrate.ts --outdir ./dist/db --target bun",
    "start": "NODE_ENV=production bun dist/index.js",
    "migrate": "bun run dist/db/migrate.js"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/jwt": "^0.8.0",
    "@elysiajs/swagger": "^0.8.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.29.3",
    "elysia": "^0.8.9",
    "pg": "^8.11.3",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.9",
    "bun-types": "latest",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.9",
    "typescript": "^5.3.3"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
