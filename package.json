{
  "name": "brainforest-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run build:clean && bun run build:compile && bun run build:migrate && bun run build:copy-drizzle",
    "build:clean": "rimraf dist",
    "build:compile": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:migrate": "bun build ./src/db/migrate.ts --outdir ./dist/db --target bun",
    "build:copy-drizzle": "copyfiles -u 1 \"drizzle/**/*\" dist",
    "start": "NODE_ENV=production bun dist/index.js",
    "migrate": "bun run dist/db/migrate.js",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.2",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "1.3.3",
    "@elysiajs/jwt": "^1.3.0",
    "@elysiajs/swagger": "1.3.0",
    "bcryptjs": "3.0.2",
    "drizzle-orm": "0.43.1",
    "elysia": "^1.3.1",
    "pg": "^8.16.0",
    "postgres": "3.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.15.2",
    "bun-types": "1.2.14",
    "copyfiles": "^2.4.1",
    "dotenv": "16.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.27.0",
    "rimraf": "^6.0.1",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
