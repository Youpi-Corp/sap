{
  "name": "brainforest-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run build:clean && bun run build:compile && bun run build:copy-drizzle",
    "build:clean": "rm -rf dist",
    "build:compile": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:copy-drizzle": "mkdir -p dist/drizzle && cp -r drizzle/* dist/drizzle/",
    "build:win": "bun run build:clean:win && bun run build:compile && bun run build:copy-drizzle:win",
    "build:clean:win": "rmdir /s /q dist 2>nul || echo Directory already clean",
    "build:copy-drizzle:win": "mkdir dist\\drizzle 2>nul && xcopy /E /I drizzle dist\\drizzle",
    "start": "NODE_ENV=production bun dist/index.js",
    "setup": "bun run src/scripts/setup-dev.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:up": "drizzle-kit up",
    "db:validate": "bun run src/scripts/validate-migration.ts",
    "db:reset": "bun run src/scripts/reset-database.ts",
    "db:force-reset": "bun run src/scripts/force-reset-database.ts",
    "migrate": "bun run db:validate && bun run db:migrate",
    "migrate:roles": "bun run src/db/migrate-roles.ts",
    "migrate:multi-roles": "bun run src/db/roles-migration.ts",
    "create:admin": "bun run src/scripts/create-admin.ts",
    "init:roles": "bun run src/scripts/init-roles.ts",
    "test:email": "bun run src/scripts/test-email.ts",
    "lint": "eslint . --ext .ts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.2",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "1.3.3",
    "@elysiajs/jwt": "^1.3.0",
    "@elysiajs/swagger": "1.3.0",
    "bcryptjs": "3.0.2",
    "dotenv": "16.5.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "0.43.1",
    "elysia": "^1.3.1",
    "pg": "^8.16.0",
    "postgres": "3.4.7",
    "vitest": "^3.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.15.2",
    "bun-types": "1.2.14",
    "eslint": "^9.27.0",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
